{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Template for SaaS pricing files. Copy this and fill in the values.",

  "product": "Product Name",
  "url": "https://example.com/pricing",
  "currency": "INR",
  "country": "IN",
  "updated_at": "YYYY-MM-DD",

  "plans": [
    {
      "$comment": "Free tier",
      "name": "Free",
      "price": 0
    },
    {
      "$comment": "Paid plan with monthly and yearly options. price = actual amount billed (cost_per_term). price_per_month = monthly equivalent for comparison.",
      "name": "Pro",
      "slug": "internal_plan_id",
      "monthly": {
        "price": 655,
        "per": "user"
      },
      "yearly": {
        "price": 6540,
        "price_per_month": 545,
        "per": "user"
      }
    },
    {
      "$comment": "Flat-rate plan (not per-user)",
      "name": "Team",
      "monthly": {
        "price": 5000,
        "per": "flat",
        "includes": "up to 10 users"
      },
      "yearly": {
        "price": 48000,
        "price_per_month": 4000,
        "per": "flat",
        "includes": "up to 10 users"
      }
    },
    {
      "$comment": "Enterprise/custom pricing",
      "name": "Enterprise",
      "price": null,
      "price_label": "Custom"
    }
  ],

  "discounts": {
    "$comment": "Optional - include if region-specific discounts exist",
    "region_discount": {
      "percentage": 55,
      "applied": true
    }
  },

  "_meta": {
    "$comment": "Field reference - remove this section in actual files",
    "per_values": ["user", "seat", "flat", "org", "workspace"],
    "price": "Actual amount billed for the term (cost_per_term)",
    "price_per_month": "Monthly equivalent for yearly plans (cost_per_m)",
    "price_label": "Use when price is null: Custom, Contact Sales, Free"
  }
}
